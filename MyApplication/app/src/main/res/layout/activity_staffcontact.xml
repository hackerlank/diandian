<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/qianblue">
        <ImageView
            android:id="@+id/ivstaffback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/backwhites"
            />

        <TextView
            android:id="@+id/tvstaffc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/bg_White"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            />
    </LinearLayout>
    <com.dingli.diandiaan.view.VerticalSwipeRefreshLayout
        android:id="@+id/referstaff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/live"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/bg_White"
                android:layout_alignParentBottom="true"/>
        <com.dingli.diandiaan.view.XListView
            android:layout_above="@id/live"
            android:id="@+id/listviewstaff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/bg_White"
            android:background="@color/bg_White"
            android:listSelector="@drawable/page_list_selector"
            />
            <RelativeLayout
                android:id="@+id/rlxianstaff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/wuiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wushujutai"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/wuiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wuzan"
                    android:layout_centerInParent="true"
                    android:textColor="@color/wukeyase"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.dingli.diandiaan.view.VerticalSwipeRefreshLayout>
</LinearLayout>