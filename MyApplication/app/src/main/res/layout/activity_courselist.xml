<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_White">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/viewdetas"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/daoh"/>
        <LinearLayout
            android:layout_below="@id/viewdetas"
            android:id="@+id/syllabustvcl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/kec_title"/>
    <TextView
        android:id="@+id/syllabustvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/setlo"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        />
        </LinearLayout>
        <View
            android:id="@+id/viewdeta"
            android:layout_below="@id/syllabustvcl"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/daoh"/>
        <com.dingli.diandiaan.rollcall.NoScrollListView
            android:layout_marginTop="5dp"
            android:id="@+id/lvcousrse"
            android:layout_below="@id/viewdeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/bg_White"
            android:listSelector="@drawable/nobian_selector"
            />
    <View
        android:id="@+id/qicheview"
        android:layout_below="@id/lvcousrse"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/daoh"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_below="@id/qicheview"
        android:id="@+id/diyihang"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_biao"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/wenzis"/>
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dated"
            android:textColor="@color/wenzis"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/classroomdatecourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="34dp"
            android:textColor="@color/qiangzi"/>
        <TextView
            android:id="@+id/classroomweekcourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/qiangzi"/>
        <TextView
            android:id="@+id/classroomzhoucourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/qiangzi"/>
    </LinearLayout>
        <View
            android:id="@+id/viewyi"
            android:layout_below="@id/diyihang"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yiqiandao"
            android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_below="@id/viewyi"
        android:id="@+id/dierhang"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_classhour"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jienum"
            android:textColor="@color/wenzis"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jienums"
            android:textColor="@color/wenzis"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/classroomjiecourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="34dp"
            android:textColor="@color/qiangzi"
            />
    </LinearLayout>
        <View
            android:id="@+id/viewer"
            android:layout_below="@id/dierhang"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yiqiandao"
            android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:id="@+id/disanhang"
        android:layout_below="@id/viewer"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/icon_timersd"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/wenzis"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/times"
            android:textColor="@color/wenzis"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="34dp"
            android:id="@+id/classroomtimecourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/qiangzi"/>
    </LinearLayout>
        <View
            android:id="@+id/viewsan"
            android:layout_below="@id/disanhang"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yiqiandao"
            android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:id="@+id/disihang"
        android:layout_below="@id/viewsan"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/point"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@color/wenzis"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locations"
            android:textColor="@color/wenzis"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginLeft="34dp"
            android:id="@+id/classroomjiaocourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/qiangzi"
            />
    </LinearLayout>
        <View
            android:id="@+id/viewsi"
            android:layout_below="@id/disihang"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yiqiandao"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:id="@+id/tvchid"
            android:layout_below="@id/viewsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/kdetail_chi"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wenzis"
                android:text="@string/later"
                android:textSize="14sp"/>
             <TextView
                 android:id="@+id/chidaotv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/kebs"
                 android:textSize="14sp"
                 android:layout_marginLeft="25dp"
                 />
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@id/tvchid"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/center">
            <LinearLayout
                android:id="@+id/licouresping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/pingjiao_selector"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/pingjiacourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pingjiao"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="right"
                    android:textColor="@color/wenziyanse"
                    />
                <TextView
                    android:id="@+id/daorenshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/qianblue"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/zongrenshu"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textColor="@color/wenziyanse"
                    android:textSize="20sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
