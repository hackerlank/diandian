<?xml version="1.0" encoding="utf-8"?>
<com.dingli.diandiaan.evaluation.choceclassAdapter.ListItemClassView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
   >
    <LinearLayout
        android:id="@+id/lloa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/classnamed"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/sex_select"
            android:visibility="gone"/>
        <!--<CheckBox-->
            <!--android:id="@+id/selected"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:button="@null"-->
            <!--android:background="@drawable/check_box"-->
            <!--/>-->
    </LinearLayout>
    <View
        android:layout_below="@id/lloa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_Gray_light"/>
</com.dingli.diandiaan.evaluation.choceclassAdapter.ListItemClassView>