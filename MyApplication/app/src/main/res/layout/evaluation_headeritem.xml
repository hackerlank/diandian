<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/rlheader"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <TextView
        android:id="@+id/tvall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allclass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/wenziyanse"/>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_below="@id/tvall"
        android:layout_marginTop="20dp"
        android:id="@+id/mChartfen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        />
     <LinearLayout
         android:id="@+id/liwuxin"
         android:layout_below="@id/mChartfen"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginLeft="30dp">
         <TextView
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/calendar_order_item_bg"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/wuxin"
             android:layout_marginLeft="5dp"/>
         <TextView
             android:id="@+id/wuxingeshu"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"/>
         <TextView
             android:id="@+id/wuxinbili"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="40dp"/>
     </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/lisixin"
        android:layout_below="@id/liwuxin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/calendar_order_item_bgfour"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sixin"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/sixingeshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/sixinbili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/lisanxin"
        android:layout_below="@id/lisixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/calendar_order_item_bgsan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sanxin"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/sanxingeshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/sanxinbili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/lierxin"
        android:layout_below="@id/lisanxin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/calendar_order_item_bger"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erxin"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/erxingeshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/erxinbili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/liyixin"
        android:layout_below="@id/lierxin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/calendar_order_item_bgyi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yixin"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/yixingeshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/yixinbili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
</RelativeLayout>