<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="308dp"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_cornerselect"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="34dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_dialogs"/>
        <TextView
            android:id="@+id/tvzhongxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/qintongyi"
            android:textSize="20sp"
            android:textColor="@color/setxius"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTongyiDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/setxius"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnTongyiDialogCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/hintdiaqu"
            android:text="@string/quxiao"
            android:textColor="@color/setxius"
            android:textSize="15sp"
             />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/one_line" />
        <Button
            android:id="@+id/btnTongyiDialogDetermine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hint_dialog_btn_selector"
            android:gravity="center"
            android:text="@string/qued"
            android:textColor="@color/bg_White"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>