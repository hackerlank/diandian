<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <View
      android:layout_width="match_parent"
      android:layout_height="12dp"
      android:background="@color/center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/lixiaos">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_yuef"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instin"
            android:textColor="@color/wenziyanse"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btheadkai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/code_click"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:textColor="@color/bg_White"
        android:gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/center"/>
    <RelativeLayout
        android:id="@+id/reheaditem"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/llqd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_weitime"/>
            <TextView
                android:id="@+id/tvheadtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="14sp"
                android:textColor="@color/wenziyanse"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/llqd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_weiloca"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:textColor="@color/one_liuyan"
                android:text="@string/qiangkuang"/>
            <TextView
                android:id="@+id/tvliushu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/liushu"
                android:layout_marginLeft="20dp"
                />
              <TextView
                  android:id="@+id/tvheadzong"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/wenziyanse"
                  />
        </LinearLayout>
        <TextView
            android:id="@+id/btheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_White"
            android:textSize="18sp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/ke_click"
            android:drawableLeft="@mipmap/ke_detai"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:drawablePadding="6dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/chakan"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/lixiaos"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_yuef"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/weizi"
            android:text="@string/dianlu"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/center"/>
</LinearLayout>