<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/llsuione"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:paddingTop="14dp">
     <ImageView
         android:id="@+id/ivsuione"
         android:layout_width="14dp"
         android:layout_height="14dp"
         android:src="@mipmap/icon_dialogs"
         />
        <ImageView
            android:id="@+id/ivsuionewei"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/icon_suiwei"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvsuione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:textColor="@color/setxius"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/llsuitwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="14dp"
            >
            <ImageView
                android:id="@+id/ivsuitwo"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/icon_dialogs"
                />
            <ImageView
                android:id="@+id/ivsuitwowei"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/icon_suiwei"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvsuitwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:textColor="@color/setxius"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>